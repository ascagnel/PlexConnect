<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
  </head>

  <body>
    <itemCollectionWithImageHeader id="com.sample.menu-items-with-sections">
    {{CUT(size:CUT:0=CUT|1=)}}
      <header>
       <imageHeader>
            <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=620|1080=880)}}, 0" required="true">{{URL(:/fanartcache/{{LFBG("falco953","{{EVAL(quote_plus("{{VAL(title1:Plex Library)}}"))}}","{{EVAL(quote_plus("{{VAL(title2)}}"))}}","backgrounds/blank.jpg","{{VAL(^aTVScreenResolution)}}","fonts/OpenSans/OpenSans-Light.ttf","50","20","FFFFFF","FFFFFF","center","top","500","50","","","Grid")}})}}</image>
        </imageHeader>
      </header>
      <menu>
        <sections>

          <!-- Directory -->
          <menuSection>
          {{CUT(Directory/key:CUT:=)}}
            <items>
              <oneLineMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL(key)}}')"
                                       onSelect="atv.loadURL('{{URL(key)}}')">
              {{COPY(Directory)}}
                <label>{{VAL(title)}}</label>
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>
            </items>
          </menuSection>

          <!-- Artist -->
          <!-- audio V1 -->
          <menuSection>
          {{CUT(Artist/key:CUT:=)}}
            <items>
              <oneLineMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL(key)}}')"
                                       onSelect="atv.loadURL('{{URL(key)}}')">
                {{COPY(Artist)}}
                <label>{{VAL(artist)}}</label>
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>
            </items>
          </menuSection>

          <!-- Album -->
          <!-- audio V1 -->
          <menuSection>
          {{CUT(Album/key:CUT:=)}}
            <items>
              <oneLineMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL(key)}}')"
                                       onSelect="atv.loadURL('{{URL(key)}}')">
                {{COPY(Album)}}
                <label>{{VAL(label)}}</label>
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>
            </items>
          </menuSection>

          <!-- Playlist -->
          <!-- audio V1 -->
          <menuSection>
          {{CUT(Playlist/key:CUT:=)}}
            <items>
              <oneLineMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL(key)}}')"
                                       onSelect="atv.loadURL('{{URL(key)}}')">
                {{COPY(Playlist)}}
                <label>{{VAL(title)}}</label>
                <rightLabel>{{VAL(count)}}</rightLabel>
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>
            </items>
          </menuSection>

          <!-- Genre -->
          <!-- audio V1 -->
          <menuSection>
          {{CUT(Genre/key:CUT:=)}}
            <items>
              <oneLineMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL(key)}}')"
                                       onSelect="atv.loadURL('{{URL(key)}}')">
                {{COPY(Genre)}}
                <label>{{VAL(genre)}}</label>
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </oneLineMenuItem>
            </items>
          </menuSection>

        </sections>
      </menu>
    </itemCollectionWithImageHeader>

    <!--No Items Available-->
    <dialog id="com.sample.error-dialog">
    {{CUT(size::0=|1=CUT)}}
      <title>PlexConnect</title>
      <description>{{TEXT(Plex Media Server: No Items Available)}}</description>
    </dialog>
  </body>
</atv>
